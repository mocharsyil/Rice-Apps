<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout

    android:id="@+id/splash_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_screen">

    <ImageView
        android:id="@+id/image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_below="@id/ellipse_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:src="@drawable/splash_image" />


    <View
        android:id="@+id/ellipse_1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-111dp"
        android:layout_marginTop="-36dp"
        android:background="@drawable/eclipse" />

    <View
        android:id="@+id/ellipse_2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="-1.59dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-98dp"
        android:background="@drawable/eclipse_2" />

    <TextView
        android:id="@+id/rice_apps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:layout_marginStart="32dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="32dp"
        android:text="@string/rice_apps"
        android:textAppearance="@style/rice_apps"
        android:gravity="center_horizontal|center_vertical" />

    <TextView
        android:id="@+id/lorem_ipsum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rice_apps"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:text="@string/lorem_ipsum"
        android:textAppearance="@style/lorem_ipsum"
        android:gravity="center_horizontal|top" />

    <Button
        android:id="@+id/moveLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lorem_ipsum"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:text="Login"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/rectangle_2"
        android:gravity="center" />

    <Button
        android:id="@+id/Moveregister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/moveLogin"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:text="Register"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/rectangle_2"
        android:gravity="center" />

</RelativeLayout>
</ScrollView>